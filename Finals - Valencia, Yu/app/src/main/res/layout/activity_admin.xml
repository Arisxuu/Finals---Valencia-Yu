<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdminActivity">

    <Button
        android:id="@+id/btn_entranceGuard"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="300dp"
        android:layout_height="60dp"
        android:text="Entrance Guard"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_exitGuard"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Exit Guard"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/btn_entranceGuard"/>

    <Button
        android:id="@+id/btn_jobOwners"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Job Owners"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/btn_exitGuard"/>

    <Button
        android:id="@+id/btn_storeOwner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Store Owner"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/btn_jobOwners"/>

</androidx.constraintlayout.widget.ConstraintLayout>
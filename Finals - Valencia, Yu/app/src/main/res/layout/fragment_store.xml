<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.StoreFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">


            <ImageView
                android:id="@+id/iv_logo1"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:background="@color/white"
                android:src="@drawable/kidzania_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:orientation="vertical"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/iv_logo1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/intro">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ticket Price"
                        android:textAlignment="center"
                        android:paddingBottom="30dp"
                        android:textSize="30dp"
                        style="@style/TextAppearance.Material3.TitleMedium"/>

                    <ImageView

                        android:layout_width="358dp"
                        android:layout_height="200dp"
                        android:paddingBottom="30dp"
                        android:src="@drawable/price" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/intro">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buy Stuff with Your KidZos!"
                        android:paddingTop="20dp"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        style="@style/TextAppearance.Material3.TitleMedium"/>


                    <ImageView

                        android:layout_width="358dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/kz_m2" />

                    <ImageView

                        android:layout_width="358dp"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/kz_m1"
                        android:layout_gravity="center"/>


                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@xml/textview_border"
               >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kidzania Merchandise"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:background="@xml/textview_border"
                    style="@style/TextAppearance.Material3.TitleMedium"/>

                <ImageView

                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/kidzb"
                    android:background="@xml/textview_border"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@xml/textview_border"
                    android:src="@drawable/kzid" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kidzania ID Lace"
                    android:background="@xml/textview_border"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    style="@style/TextAppearance.Material3.TitleMedium"/>

                <TextView
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@xml/textview_border"
                    android:text="Php150.00"
                    android:textColor="@color/black" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@xml/textview_border"
                    android:src="@drawable/kzwch" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kidzania Watch"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:background="@xml/textview_border"
                    style="@style/TextAppearance.Material3.TitleMedium"/>

                <TextView
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:text="Php250.00"
                    android:background="@xml/textview_border"
                    android:textColor="@color/black" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@xml/textview_border"
                    android:src="@drawable/kzbp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kidzania Ballpen"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:background="@xml/textview_border"
                    style="@style/TextAppearance.Material3.TitleMedium"/>

                <TextView
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:text="Php120.00"
                    android:background="@xml/textview_border"
                    android:textColor="@color/black" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@xml/textview_border"
                    android:src="@drawable/kznb"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kidzania Notebook"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:background="@xml/textview_border"
                    style="@style/TextAppearance.Material3.TitleMedium"/>

                <TextView
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@xml/textview_border"
                    android:text="Php100.00"
                    android:textColor="@color/black" />







            </LinearLayout>




            </LinearLayout>



        </TableLayout>
    </ScrollView>




</FrameLayout>
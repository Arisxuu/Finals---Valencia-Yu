<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdminEntranceGuardActivity"
    android:background="@drawable/day">

    <ImageView
        android:id="@+id/iv_logo1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/kidzania_logo"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_logo1"
        android:text="Entrance Guard"
        android:gravity="center"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:background="@color/black"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_scanForEntry"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="180dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Scan for entry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.598"
        tools:layout_editor_absoluteX="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>